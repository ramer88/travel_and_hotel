.header
	width 100%
	max-width 1280px
	margin 0 auto
	padding 20px 152px 20px
	overflow hidden
	background-color #fff
	
	a
		color #8d8d8d
		cursor pointer

	.header_logo
		float left
		font-size 30px
		
		& a
			display block

		& span
			font-family boldFont
			color #1298dd

.header_menu
	float right

	li
		display inline-block
		margin-right 10px

		a
			font-size 18px
			padding 0px 9px 0px

			&:hover,
			&:focus
				background linear-gradient(to top, #36b1f7, #1784d1)
				color #fff
				border-radius 3px

