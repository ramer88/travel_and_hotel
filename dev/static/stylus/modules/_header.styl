section.features
	width 100%
	max-width 1280px
	height 568px
	position relative
	background-color #ececec
	margin-bottom 0
	border-top 1px solid transparent
	
.features-block
	margin-top 210px

.features-text
	width 100%
	min-width 689px

	span
		display block
		color #8d8d8d
		font-family mainFont
		font-size 18px
		text-align center
		
	span:last-child
		font-size 16px
		
.features-allIcon
	width 100%
	max-width 753px
	margin 53px auto 0
	
.features-icon
	display inline-block
	width 130px
	height 130px
	text-align center
	margin-right 73px
	border-radius 50%
	
	&:last-child
		margin-right 0
	& span
		display block
		color #8d8d8d
		margin-top 150px
		
.features-icon:nth-child(1)
	background #fff url(../img/sprite/globus.png) center no-repeat
	
.features-icon:nth-child(2)
	background #fff url(../img/sprite/busket.png) center no-repeat
	
.features-icon:nth-child(3)
	background #fff url(../img/sprite/photo.png) center no-repeat
	
.features-icon:nth-child(4)
	background #fff url(../img/sprite/search.png) center no-repeat
	
